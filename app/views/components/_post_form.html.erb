<div class="panel panel-default post-form-panel">
			<div class="panel-body row">
				<div class="col-sm-1">
					<img class="post-form-avatar-image" src="/avatar_400x400.jpeg"></img>
				</div>
				<div class="col-sm-11">
					<%= form_for(@newPost) do |f| %>
						<div class="field" style="margin-left: 10px">
					    	<%= f.text_field :content, autofocus: true, class: "form-control" %>
					    	<span type="button" class="btn btn-submit" style="float: right; margin-top: 3px;">
					    		<%= f.submit "Agregar tweet", class: "btn btn-primary" %>
					    	</span>
					  	</div>
					  
					<% end %>
				</div>

			</div>
		</div>



